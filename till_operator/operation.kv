<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperationWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Point Of Sale System'
            size_hint_x: .9
            bold: True
            color: (1, 1, 1, 1)
        FlatButton:
            id: loggedin_user
            text: 'Okaka'
            color: (1, 1, 1, 1)
            underline:True
            on_release: root.logout()     
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0.2, 0.5, 0.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item'
            background_normal: ''
            background_color: (0.20, 0.48, 0.76, 1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal: ''
            background_color: (0.22, 0.55, 0.88, 1)
        Button:
            id: cur_price
            text: '0.00'
            background_normal: ''
            background_color: (0.24, 0.6, 0.96, 1)
            size_hint_x: .2
    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: .8
            spacing: 10

            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (0.2, 0.5, 0.8, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: 'Qty'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: .3
                FlatButton:
                    text: 'Disc'
                    size_hint_x: .1
                FlatButton:
                    text: 'Disc %'
                    size_hint_x: .1
                FlatButton:
                    text: 'VAT'
                    size_hint_x: .1
                FlatButton:
                    text: 'Price'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: .2
            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                    text: '1'
                TextInput:
                    id: code_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: root.update_purchases()
                    focus:True
                TextInput:
                    id: disc_inp
                    size_hint_x: .1
                    text: '0.00'
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: .1
                    text: '0'
                TextInput:
                    id: vat_inp
                    size_hint_x: .1
                    text: '15%'
                TextInput:
                    id: price_inp
                    size_hint_x: .1
                    text: '0.00'
                TextInput:
                    id: total_inp
                    size_hint_x: .2
                    text: '0.00'
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (0.2, 0.5, 0.8, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .2
                    Label:
                        text: 'Product Name'
                        size_hint_x: .3
                    Label:
                        text: 'Qty'
                        size_hint_x: .1
                    Label:
                        text: 'Disc'
                        size_hint_x: .1
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                    Label:
                        text: 'Product Total'
                        size_hint_x: .2

                ScrollView:
                    GridLayout:
                        id: products
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height

        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'Rooted Guru'
                bold: True
                halign: "center"
                font_name: 'RobotoMono-Regular' 
                valign: "top"
                padding: [5, 5]

       # Payment method selection section
    BoxLayout:
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0.2, 0.5, 0.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Cash'
            background_color: (0.16, 0.4, 0.64, 1)
            on_release: root.select_payment_method('Cash')
        Button:
            text: 'Credit Card'
            background_color: (0.16, 0.4, 0.64, 1)
            on_release: root.select_payment_method('Credit Card')
        Button:
            text: 'Mobile Payment'
            background_color: (0.16, 0.4, 0.64, 1)
            on_release: root.select_payment_method('Mobile Payment')            

    BoxLayout:
        size_hint_y: None
        height: 50
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.2, 0.5, 0.8, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Complete Transaction'
            background_color: (0.16, 0.4, 0.64, 1)
            on_release: root.complete_transaction()
        Button:
            text: 'Print Receipt'
            background_color: (0.16, 0.4, 0.64, 1)
            on_release: root.print_receipt()

    BoxLayout:
        id: footer
        size_hint_y:None
        height: 30
        canvas.before:
            Color:
                rgba: (0.16, 0.4, 0.64, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'ROOTED GURU POINT OF SALE SYSTEM'
